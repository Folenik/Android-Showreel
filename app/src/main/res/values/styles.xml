<resources>

    <style name="ShowreelLabel">
        <item name="android:textSize">@dimen/textSize12</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ShowreelLabel.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShowreelLabel.Header">
        <item name="android:paddingLeft">@dimen/spacing16</item>
        <item name="android:paddingRight">@dimen/spacing16</item>
        <item name="android:paddingTop">@dimen/spacing16</item>
        <item name="android:paddingBottom">@dimen/spacing16</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="ShowreelLabel.Header.Huge">
        <item name="android:textSize">@dimen/textSize36</item>
        <item name="android:paddingLeft">@dimen/spacing0</item>
    </style>

    <style name="ShowreelLabel.White.ButtonTextBig">
        <item name="android:paddingLeft">@dimen/spacing32</item>
        <item name="android:paddingRight">@dimen/spacing32</item>
        <item name="android:paddingTop">@dimen/spacing32</item>
        <item name="android:drawableTop">@drawable/ic_label</item>
        <item name="android:paddingBottom">@dimen/spacing32</item>
        <item name="android:background">@drawable/button_big</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShowreelLabel.White.ButtonTextSmall">
        <item name="android:paddingLeft">@dimen/spacing8</item>
        <item name="android:paddingRight">@dimen/spacing8</item>
        <item name="android:paddingTop">@dimen/spacing8</item>
        <item name="android:paddingBottom">@dimen/spacing8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableLeft">@drawable/ic_label</item>
        <item name="android:background">@drawable/button_small</item>
    </style>

    <style name="ShowreelLabel.Long">
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">@dimen/textSize24</item>
    </style>

    <style name="ShowreelLabel.Long.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShowreelLabel.Long.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ShowreelLabel.Long.Italic.Small">
        <item name="android:textSize">@dimen/textSize16</item>
    </style>

    <style name="ShowreelImage">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>
