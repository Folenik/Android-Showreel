<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing32">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/constraint_name"
        style="@style/ShowreelLabel.Long.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing8"
        android:text="@string/constraint_item_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/constraint_view"
        style="@style/ShowreelLabel.Long.Small.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing8"
        android:text="@string/constraint_item_view"
        app:layout_constraintBottom_toBottomOf="@id/constraint_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/inside_layout1"
        android:layout_width="@dimen/spacing110"
        android:layout_height="@dimen/spacing140"
        android:layout_marginTop="@dimen/spacing8"
        android:layout_marginLeft="@dimen/spacing24"
        android:background="@drawable/constraint_menu_shape"
        android:padding="@dimen/spacing6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint_name">

        <android.support.v7.widget.AppCompatImageView
            style="@style/ShowreelImage"
            android:layout_width="@dimen/spacing120"
            android:layout_height="@dimen/spacing96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/ShowreelLabel.LongNoColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/constraint_value"
            android:layout_marginBottom="@dimen/spacing4"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/inside_layout2"
        android:layout_width="@dimen/spacing110"
        android:layout_height="@dimen/spacing140"
        android:layout_marginLeft="@dimen/spacing20"
        android:layout_marginTop="@dimen/spacing8"
        android:background="@drawable/constraint_menu_shape"
        android:padding="@dimen/spacing6"
        app:layout_constraintStart_toEndOf="@id/inside_layout1"
        app:layout_constraintTop_toBottomOf="@id/constraint_name">

        <android.support.v7.widget.AppCompatImageView
            style="@style/ShowreelImage"
            android:layout_width="@dimen/spacing120"
            android:layout_height="@dimen/spacing96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/ShowreelLabel.LongNoColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/constraint_value"
            android:layout_marginBottom="@dimen/spacing4"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/inside_layout3"
        android:layout_width="@dimen/spacing110"
        android:layout_height="@dimen/spacing140"
        android:layout_marginLeft="@dimen/spacing20"
        android:layout_marginRight="@dimen/spacing24"
        android:layout_marginTop="@dimen/spacing8"
        android:background="@drawable/constraint_menu_shape"
        android:padding="@dimen/spacing6"
        app:layout_constraintStart_toEndOf="@id/inside_layout2"
        app:layout_constraintTop_toBottomOf="@id/constraint_name">

        <android.support.v7.widget.AppCompatImageView
            style="@style/ShowreelImage"
            android:layout_width="@dimen/spacing120"
            android:layout_height="@dimen/spacing96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/ShowreelLabel.LongNoColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/constraint_value"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/spacing8"
            android:layout_marginBottom="@dimen/spacing4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>