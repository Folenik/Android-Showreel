<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing5"
    app:cardCornerRadius="@dimen/spacing4"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing5">

        <android.support.constraint.Guideline
            android:id="@+id/guideLineLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0" />

        <android.support.constraint.Guideline
            android:id="@+id/guideLineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0" />

        <ImageView
            android:id="@+id/list_image"
            style="@style/ShowreelImage"
            android:layout_width="@dimen/spacing60"
            android:layout_height="@dimen/spacing60"
            app:layout_constraintStart_toStartOf="@id/guideLineLeft"
            app:layout_constraintTop_toBottomOf="@id/guideLineTop"
            app:layout_constraintEnd_toStartOf="@id/list_name"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@mipmap/ic_launcher" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/list_name"
            style="@style/ShowreelLabel.Long.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing8"
            android:text="@string/list_item_name"
            app:layout_constraintStart_toEndOf="@id/list_image"
            app:layout_constraintTop_toTopOf="@id/guideLineTop"
            app:layout_constraintBottom_toTopOf="@id/list_description"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/list_description"
            style="@style/ShowreelLabel.Long.Italic.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing8"
            android:text="@string/list_item_description"
            app:layout_constraintStart_toEndOf="@id/list_image"
            app:layout_constraintTop_toBottomOf="@id/list_name"
            app:layout_constraintBottom_toBottomOf="@id/list_image"
            />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>